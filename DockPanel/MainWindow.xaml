<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Button Content="Izquierda" DockPanel.Dock="Left"></Button>
        <Button Content="Derecha" DockPanel.Dock="Right"></Button>
        <Button Content="Abajo" DockPanel.Dock="Bottom"></Button>
        <Button Content="Arriba" DockPanel.Dock="Top"></Button>
        <Button Content="Centro"></Button>

    </DockPanel> 
</Window>
