<Window x:Class="PracticaStyleResources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaStyleResources"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <StackPanel.Resources>
            <Style x:Key="mode1" TargetType="TextBlock">
                <Setter Property="Foreground" Value="Aquamarine"></Setter>
                <Setter Property="Background" Value="Green"></Setter>
            </Style>
        </StackPanel.Resources>
        <TextBlock Style="{StaticResource mode1}">Header1</TextBlock>
        <TextBlock>Header2</TextBlock>
        <TextBlock Foreground="black">Header3</TextBlock>
    </StackPanel>
</Window>
