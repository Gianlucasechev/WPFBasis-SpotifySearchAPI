<Window x:Class="Slider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slider"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Margin="20" Text="{Binding ElementName=slider, Path=Value, UpdateSourceTrigger=PropertyChanged}" Foreground="black"></TextBlock>
        <Slider x:Name="slider" Minimum="0" Maximum="100" TickFrequency="10" TickPlacement="Both"></Slider>
    </Grid>
</Window>
