<Window x:Class="Elementos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elementos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Topmost="True">
    <Grid>
        <ListBox Name="lstbox1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding ID}"></Label>
                        <Label Content="{Binding FirstName}"></Label>
                        <Label Content="{Binding LastName}"></Label>
                        <Label Content="{Binding LastAccess}"></Label>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
