<Window x:Class="CanvasPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanvasPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- En canvas se trabaja con perspectiva y profundidad -->
        <Button Content="Button1" Panel.ZIndex="-1" Margin="10 0 0 0"></Button>
        <Button Content="Button2" Panel.ZIndex="0"  Margin="20 0 0 0"/>
        <Button Content="Button3" Panel.ZIndex="1"  Margin="30 0 0 0"/>
        <Button Content="Button4" Panel.ZIndex="2"  Margin="40 0 0 0"/>
        
        <Button></Button>
        <Button></Button>
    </Canvas>
</Window>
