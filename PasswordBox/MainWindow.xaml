<Window x:Class="PasswordBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <StackPanel>
        <Button Name="Button1" Content="Mostrar Boton" Margin="200" Click="btn_click" ></Button>
        <Popup x:Name="pop1" Placement="Mouse" PopupAnimation="Fade">
            <StackPanel Background="white">
                <Label HorizontalAlignment="Center" Content="click para ocultar"></Label>
                <Button Margin="10" Click="btn_click1" Content="ocultar"></Button>
            </StackPanel>
        </Popup>
    </StackPanel>
</Window>
