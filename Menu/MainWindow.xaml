<Window x:Class="Menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu"
        mc:Ignorable="d"
        Topmost="True"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="Archivo">
                <MenuItem Header="Nuevo"></MenuItem>
                <MenuItem Header="Abrir"></MenuItem>
                <MenuItem Header="Guardar"></MenuItem>
                <MenuItem Header="Salir"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edición">
                <MenuItem Header="Cortar"></MenuItem>
                <MenuItem Header="Copiar"></MenuItem>
                <MenuItem Header="Pegar"></MenuItem>
            </MenuItem>
        </Menu>
    </StackPanel>
</Window>
